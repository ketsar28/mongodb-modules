<div class="container mt-5">
  <div class="row">
    <div class="col">
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" id="msg" role="alert">Data Contact Tidak Tersedia! <a href="/contacts" class="fw-normal text-decoration-none">Kembali Ke Halaman Kontak &rAarr;</a></div>
      <% } else { %>
      <div class="card bg-success shadow-lg" style="width: 18rem">
        <div class="card-body text-white">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2"><%= contact.email %></h6>
          <p class="card-text"><%= contact.telp %></p>
          <div class="tombol d-flex gap-2 mb-3">
            <a href="/contacts/edit/<%= contact.nama %>" class="btn btn-warning badges fw-bold">&#10000; Edit</a>
            <!-- <a href="/contacts/delete/<%= contact.nama %>" class="btn btn-danger badges fw-bold w-50" onclick="return confirm('Yakin Mau Di Hapus ??')">&#9851; Delete</a> -->
            <form method="POST" action="/contacts?_method=DELETE">
              <input type="hidden" name="nama" value="<%= contact.nama %>" />
                <button type="submit" class="btn btn-danger badges fw-bold" onclick="return confirm('Yakin Mau Di Hapus ??')">&#9851; Delete</button>
            </form>
          </div>
          <a href="/contacts" class="card-link text-primary fw-bold bg-light rounded-2 py-2 px-3 w-50 d-block text-center">&lArr; Back </a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
